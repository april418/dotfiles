#!/bin/bash

#  _                     _
# | |_ _ __ ___  ___    (_)
# | __| '__/ _ \/ _ \   | |
# | |_| | |  __/  __/   | |
#  \__|_|  \___|\___|___|_|
#                  |_____|
#

# ignore files or directories written in '.tree_ignore' file.
tree_i () {
  local ignore="$(pwd)/.tree_ignore"
  if [ -f "$ignore" ]; then
    tree -I "$(cat "$ignore" | sed -e ':flag;N;$!b flag;s/\n/|/g')" $@
  else
    tree $@
  fi
}

tree_i $@

